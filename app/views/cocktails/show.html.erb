<h2><%= @cocktail.name %></h2>
<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= "#{dose.description} -   #{dose.ingredient.name}"%>
<%= link_to "Remove Ingredient", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %></li>
</ul>
<br>
<%= link_to "Add Ingredients?", new_cocktail_dose_path(@cocktail) %><br/>
<%= link_to "Back to the Cocktail List", cocktails_path %>


